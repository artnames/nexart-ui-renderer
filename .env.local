# Optimize Vite file watching to prevent ENOSPC errors
CHOKIDAR_USEPOLLING=false
CHOKIDAR_INTERVAL=300
VITE_CHOKIDAR_IGNORED=node_modules,dist,cache,hardhat-config_backup,farcaster-mini-app,replit_agent,scripts_backup
# Disable Vite HMR to prevent file watcher crashes
VITE_HMR=false
# Reduce file watching load
NODE_ENV=development